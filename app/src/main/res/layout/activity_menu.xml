<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="#79FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/datos_usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="true"
            android:background="#CDCBCB"
            android:clickable="true"
            android:clipChildren="true"
            android:contextClickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textViewDatosUsuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:text="Sus datos"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageViewDatosUsuario"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/data" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/Chatear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="true"
            android:background="#CDCBCB"
            android:clickable="true"
            android:clipChildren="false"
            android:contextClickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textViewChatear"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:text="Chatea!"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageViewChatear"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/chateando" />
        </LinearLayout>
    </LinearLayout>

    <!--SEGUNDA FILA-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/maps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="true"
            android:background="#CDCBCB"
            android:clickable="true"
            android:clipChildren="false"
            android:contextClickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textViewMaps"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_horizontal"
                android:text="Google Maps"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageViewMaps"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/mapas" />
        </LinearLayout>

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/Camara"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="true"
            android:background="#CDCBCB"
            android:clickable="true"
            android:clipChildren="false"
            android:contextClickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textViewCamara"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:text="Camara"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageViewCamara"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/camara" />
        </LinearLayout>
    </LinearLayout>


    <!--Tercera FILA-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:textColor="@color/black">


        <LinearLayout
            android:id="@+id/Bluetooth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="true"
            android:background="#CDCBCB"
            android:clickable="true"
            android:clipChildren="false"
            android:contextClickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textViewBluetooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Conecta con Bluetooth"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imageViewBluetooth"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/bluetooth" />
        </LinearLayout>

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/Creditos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:allowClickWhenDisabled="true"
            android:clickable="true"
            android:clipChildren="false"
            android:contextClickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Camara"
                android:textColor="@color/black"
                android:textSize="25dp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>